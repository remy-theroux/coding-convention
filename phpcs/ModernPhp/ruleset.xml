<?xml version="1.0"?>
<ruleset name="Iadvize">
	<description>Coding standards</description>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<rule ref="PSR1" />
	<rule ref="PSR2" />
	<rule ref="Symfony" />

    <rule ref="Symfony">
        <exclude name="Squiz.Strings.ConcatenationSpacing" />
        <exclude name="Symfony.Functions.ScopeOrder" />
        <exclude name="Symfony.Functions.Arguments" />
        <exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman" />
        <exclude name="Symfony.Objects.ObjectInstantiation" />
        <exclude name="Symfony.Commenting.License" />
        <exclude name="Symfony.Commenting.ClassComment" />
        <exclude name="Symfony.ControlStructure" />
    </rule>

    <rule ref="Squiz.Strings.DoubleQuoteUsage" />
    <rule ref="Generic.Formatting.MultipleStatementAlignment" />

	<rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="200"/>
            <property name="absoluteLineLimit" value="200"/>
        </properties>
    </rule>
</ruleset>
